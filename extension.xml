<?xml version="1.0" encoding="iso-8859-1"?>

<root version="3.3">
  <properties>
    <name>Feature: Pathbuilder Import</name>
    <version>0.1</version>
    <loadorder>50</loadorder>
    <description>
      <text>Import Characters from Pathbuilder</text>
      <website></website>
      <author>Joshua LeBlanc</author>
    </description>
    <ruleset>
      <name>PFRPG2</name>
    </ruleset>
  </properties>

  <announcement text="Pathbuilder Importer" font="emotefont" />

  <base>

    <!-- Windows -->
    <includefile source="windows/import_window.xml" />
    <includefile source="windows/error_item.xml" />

    <includefile source="strings/strings.xml" />

    <!-- Scripts -->
    <script name="ImportFromPathbuilder" file="scripts/import_from_pathbuilder.lua" />
    <script name="JSONUtil" file="utility/json_util.lua" />
    <script name="Finder" file="utility/finder.lua" />
    <script name="Fzy" file="utility/fzy/fzy.lua" />

    <script name="Ancestry" file="scripts/importers/ancestry.lua" />
    <script name="Background" file="scripts/importers/background.lua" /> 
    <script name="Class" file="scripts/importers/class.lua" /> 
    <script name="Characteristic" file="scripts/importers/characteristic.lua" />
    <script name="Deity" file="scripts/importers/deity.lua" />
    <script name="KeyAbility" file="scripts/importers/key_ability.lua" />
    <script name="Level" file="scripts/importers/level.lua" />
    <script name="Heritage" file="scripts/importers/heritage.lua" />
    <script name="Skill" file="scripts/importers/skill.lua" />
    <script name="Feat" file="scripts/importers/feat.lua" />
    <script name="Lore" file="scripts/importers/lore.lua" />
    <script name="Currency" file="scripts/importers/currency.lua" />
    <script name="Equipment" file="scripts/importers/equipment.lua" />
    <script name="Spell" file="scripts/importers/spell.lua" />
    <script name="Special" file="scripts/importers/special.lua" />
    <script name="Language" file="scripts/importers/language.lua" />
    <script name="Weapon" file="scripts/importers/weapon.lua" />
    <script name="FocusSpell" file="scripts/importers/focus_spell.lua" />
    <script name="Proficiency" file="scripts/importers/proficiency.lua" />
    <script name="Basic" file="scripts/importers/basic.lua" />
    <script name="Size" file="scripts/importers/size.lua" />
  </base>
</root>