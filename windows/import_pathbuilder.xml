<root>
	<windowclass name="import_pathbuilder">
		<frame>utilitybox</frame>
		<placement>
			<size width="1000" height="600"/>
		</placement>
		<sizelimits>
			<minimum width="800" height="600"/>
			<dynamic/>
		</sizelimits>
		<script>
			
		</script>
		<sheetdata>
			<windowtitlebar name="title">
				<resource>import_pc_title</resource>
			</windowtitlebar>
 			<anchor_title_utilitybox name="contentanchor" />

			<anchor_bottom_utilitybox_buttons name="bottomanchor" />

			<frame_pb name="contentframe"/>

			<simpleftc name="statblock">
				<anchored to="contentframe" position="over">
					<right anchor="center" offset="-20" />
					<bottom offset="-40" />
				</anchored>
				<frame name="groupbox" offset="15,15,20,15" />
				<empty textres="ft_empty_import_pc" />
			</simpleftc>
			<scrollbar>
				<anchored to="statblock" />
				<target>statblock</target>
			</scrollbar>		


				<button_import_window name="button_import">
				<script>
					function onButtonPress()
						ImportFromPathbuilder.doPBImport(window.statblock.getValue());
					end
				</script>
			</button_import_window>		

			<resize_utilitybox />
			<close_utilitybox />
		</sheetdata>
	</windowclass>
</root>